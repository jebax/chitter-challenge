<%= erb :'partials/header' %>

<% unless current_user %>
<form action='/session/new' method='post'>
  <label for='email'></label>
  <input type='text' name='email' placeholder='Email'>
  <label for='password'></label>
  <input type='text' name='password' placeholder='Password'>
  <input type='submit' value='Log in'>
</form>
<form action='/sign_up' method='get'>
  <button type='submit'>Sign up</button>
</form>
<% end %>

<form action='/peeps' method='get'>
  <button type='submit'>View all peeps</button>
</form>
<% if current_user %>
<form action='/session/destroy' method='post'>
  <button type='submit' name='id' value='<%= current_user.id %>'>Sign out</button>
</form>
<% end %>
<%= flash[:message] %>
<%= flash[:warning] %>
